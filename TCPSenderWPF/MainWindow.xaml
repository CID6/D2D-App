<Window x:Class="TCPSenderWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPSenderWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Closed="Window_Closed"
        >
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBlock x:Name="textBlock_debugLog" TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button Content="Listen" Grid.Column="1" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" Width="75" x:Name="button_listen" Click="Button_listen_Click"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="Connection status" VerticalAlignment="Top" Height="22" Width="376"/>

        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,55,0,0" TextWrapping="Wrap" Text="Connected device: " VerticalAlignment="Top" Height="22" Width="376" />
        <TextBlock x:Name="connected_device" Grid.Column="1" HorizontalAlignment="Left" Margin="115,55,0,0" TextWrapping="Wrap" Text="None" VerticalAlignment="Top" Height="22" Width="376" />

    </Grid>

</Window>
